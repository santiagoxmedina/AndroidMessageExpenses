<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="expense"
            type="com.sanmed.android.balance.view.categories_expenses.ICategoryExpenseView" />

        <variable
            name="onEdit"
            type="com.sanmed.android.balance.model.action.IAction&lt;com.sanmed.android.balance.view.categories_expenses.ICategoryExpenseView,android.view.View>" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_1"
        app:cardCornerRadius="@dimen/margin_2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{(x)->onEdit.onAction(expense,x)}"
                android:text="@{expense.name}"
                app:drawableEndCompat="@android:drawable/ic_menu_edit"
                tools:text="EPM" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{expense.amountString}"
                tools:text="$5000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{expense.getPercentageString}"
                tools:text="30%" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>